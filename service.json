{
    "containers":[
        {
            "name":"main_db",
            "hostname":"main_db",
            "prebuilt":{
                "name":"mariadb",
                "version":"latest"
            },
            "ports":[],
            "networks":[
                {
                    "name":"mysql-net"
                }
            ],
            "volumes":[
                {
                    "name":"main_db",
                    "mountpoint":"/var/lib/mysql"
                }
            ],
            "environment":[
                "MYSQL_ROOT_PASSWORD",
                "MYSQL_PASSWORD",
                "MYSQL_USER",
                "MYSQL_DATABASE"
            ]
        },
        {
            "name":"ldap",
            "hostname":"ldap",
            "url":"https://github.com/philleconnect/ServerContainers/releases/download/2.2.2/ldap.tar.gz",
            "ports":[
                {
                    "external":389,
                    "internal":389
                }
            ],
            "networks":[
                {
                    "name":"ldap-net"
                },
                {
                    "name":"schoolconnect"
                }
            ],
            "volumes":[
                {
                    "name":"ldap_db",
                    "mountpoint":"/var/lib/ldap"
                }
            ],
            "environment":[
                "SLAPD_PASSWORD",
                "SLAPD_ORGANIZATION",
                "SLAPD_DOMAIN0",
                "SLAPD_DOMAIN1"
            ]
        },
        {
            "name":"samba",
            "hostname":"samba",
            "url":"https://github.com/philleconnect/ServerContainers/releases/download/2.2.2/samba.tar.gz",
            "ports":[
                {
                    "external":137,
                    "internal":137
                },
                {
                    "external":138,
                    "internal":138
                },
                {
                    "external":139,
                    "internal":139
                },
                {
                    "external":445,
                    "internal":445
                }
            ],
            "networks":[
                {
                    "name":"schoolconnect"
                },
                {
                    "name":"ldap-net"
                }
            ],
            "userdata":"/home",
            "environment":[
                "SLAPD_PASSWORD",
                "SLAPD_ORGANIZATION",
                "SLAPD_DOMAIN0",
                "SLAPD_DOMAIN1"
            ]
        },
        {
            "name":"pc_admin",
            "hostname":"pc_admin",
            "url":"https://github.com/philleconnect/ServerContainers/releases/download/2.2.8/pc_admin.tar.gz",
            "ports":[
                {
                    "external":84,
                    "internal":80
                },
                {
                    "external":448,
                    "internal":443
                }
            ],
            "networks":[
                {
                    "name":"schoolconnect"
                },
                {
                    "name":"ldap-net"
                },
                {
                    "name":"mysql-net"
                }
            ],
            "volumes":[
                {
                    "name":"admin_config",
                    "mountpoint":"/etc/pc_admin"
                }
            ],
            "userdata":"/home",
            "environment":[
                "SLAPD_PASSWORD",
                "SLAPD_ORGANIZATION",
                "MYSQL_PASSWORD",
                "MYSQL_USER",
                "MYSQL_DATABASE",
                "SLAPD_DOMAIN0",
                "SLAPD_DOMAIN1",
                "HOST_NETWORK_ADDRESS",
                "MANAGEMENT_APIS_SHARED_SECRET"
            ]
        }
    ],
    "volumes":[
        {
            "name":"main_db"
        },
        {
            "name":"admin_config"
        },
        {
            "name":"ldap_db"
        }
    ],
    "networks":[
        {
            "name":"ldap-net",
            "internal":true
        },
        {
            "name":"mysql-net",
            "internal":true
        }
    ],
    "environment":[
        {
            "name":"SLAPD_PASSWORD",
            "description":"A root password for the slapd-service (OpenLDAP). WARNING! Anyone with this password can read and change all user data. Keep this password safe, you will need it if something fails!",
            "mutable":false
        },
        {
            "name":"SLAPD_ORGANIZATION",
            "description":"Slapd needs the name of your organization. We recommend you using the name of your school.",
            "mutable":false
        },
        {
            "name":"SLAPD_DOMAIN0",
            "description":"Slapd needs a top level domain. Everything will be stored under this key, but the user doesn't see it.",
            "mutable":false
        },
        {
            "name":"SLAPD_DOMAIN1",
            "description":"Slapd also needs a second level domain. A lot will be stored under this key, but the user doesn't see it.",
            "mutable":false
        },
        {
            "name":"HOST_NETWORK_ADDRESS",
            "description":"The IP Address of the physical server.",
            "mutable":false
        },
        {
            "name":"MYSQL_PASSWORD",
            "description":"",
            "mutable":false
        },
        {
            "name":"MYSQL_USER",
            "description":"",
            "mutable":false
        },
        {
            "name":"MYSQL_DATABASE",
            "description":"",
            "mutable":false
        }
    ]
}
